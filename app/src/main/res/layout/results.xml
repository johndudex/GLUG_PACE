<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/AntiqueWhite"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    tools:context="glugpace.org.glug_pace.Fragment1">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/EnterUSN"
        android:textColorHint="@color/common_signin_btn_text_light"
        android:hint="Enter Your USN"
        android:textColor="@color/Blue"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="top|center"
        android:background="@drawable/vtulogo"
        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/BlueViolet"
    android:layout_gravity="center"
    android:layout_marginTop="60dp"
    android:text="Submit"
    android:id="@+id/UsnBtn"
    android:textColor="@color/wallet_highlighted_text_holo_light"/>

</FrameLayout>
